---
import Brand from "../components/Brand.astro";
import { getI18N } from "../i18n";
/* GET LANG */
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

/* GET OPTIONS */
const getOptions = await fetch(import.meta.env.API_OPTIONS);
const OPTIONS = await getOptions.json();
const REDES = OPTIONS.acf.redes_sociales;

---

<footer id="contact" class="section">
  <div class="container py-10 xg:pt-20 xg:pb-7">
    
    <div class="row mb-20 xg:mb-[30rem]">
      <div class="col-[1/13] xg:col-[1/3]">
        {i18n.CONTACT}
      </div>
      <div class="col-[1/13] xg:col-[3/7]">
        <a class="link"
          href={ `mailto:${OPTIONS.acf.my_email}` }"
          target="_blank"
          rel="noreferrer noopener"
        >
          { OPTIONS.acf.my_email }
        </a>
      </div>
      <div class="col-[1/13] xg:col-[7/13] mt-10 xg:mt-0 flex flex-col">
        { 
        REDES.map( red =>(
          <a href={red.social_link} class="link" target='_blank' rel='noreferrer noopener' >
            {red.social_name}
          </a>
        ) )
        }
        
      </div>
    </div>

    <div class="row">
      <div class="col-[1/3] xg:col-[1/7]">
        <Brand alt="Andrés González" />
      </div>
      <div class="col-[3/5] xg:col-[7/11]">
        <div class="flex justify-end xg:justify-start">
          <p class="w-fit">Montevideo, Uruguay</p>
        </div>
      </div>
    </div>

  </div>
</footer>
