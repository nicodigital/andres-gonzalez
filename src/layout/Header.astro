---
import "../css/layout/header.css";
import Brand from "../components/Brand.astro";
import Burger from "../components/Burger.astro";
import Menu from "../components/Menu.astro";
import LangSwitcher from '../components/LangSwitcher.astro'
import { getI18N } from '../i18n'

const homeUrl = import.meta.env.HOME_URL ?? '/';

/* GET LANG */
const { currentLocale } = Astro;
const i18n = getI18N({currentLocale});


---
<header class="container row py-2 xg:py-4 mb-4" >
    <div class="col-span-2 sm:col-span-3 md:col-span-3">
        <Brand width="w-40% md:w-full xg:w-50%" />
    </div>
    <div class="col-span-2 sm:col-span-3 md:col-[7/10]">

        <Menu items={
            [
                [ i18n.PROFILE , '#profile' ],
                [i18n.WORKS , `#works`],
                [i18n.CONTACT , '#contact']
            ]
        } />

        <Burger/>
        
    </div>

    <div class="col-[11/13] hidden xg:flex justify-end">
        <div class="flex gap-2">
           <LangSwitcher />
        </div>
    </div>

</header>
